class Solution {
    public boolean containsNearbyDuplicate(int[] nums, int k) {
        
        HashMap <Integer,Integer> mp = new HashMap <Integer,Integer>();
        for(int i =0; i< nums.length; i++)
        {
            if(mp.containsKey(nums[i]))
            {
                int ind = mp.get(nums[i]);
                if(Math.abs(i-ind)<=k)
                {
                    return true;
                }
            }
                 mp.put(nums[i],i);
           
        }

        return false;
    }
}
